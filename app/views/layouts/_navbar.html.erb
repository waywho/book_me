<div class="navbar bg-base-100 border-b">
  <div class="flex-1">
    <a class="btn btn-ghost normal-case text-xl">BookMe</a>
  </div>
  <div class="flex-none gap-2">
    <div class="dropdown dropdown-end">
      <% if current_user %>
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <div class="w-10 rounded-full flex flex-col justify-center content-center font-bold text-xl">
            <%= current_user.email.first %>
          </div>
        </label>
        <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
          <li>
            <a class="justify-between">
              Profile
              <span class="badge">New</span>
            </a>
          </li>
          <li><a>Settings</a></li>
          <li><%= button_to 'Sign out',  destroy_user_session_path, method: :delete, class: "btn btn-primary", data: { turbo: "false" } %></li>
        </ul>
      <% else %>
        <div class="navbar-end">
          <%= link_to 'Start Playing', new_user_session_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
