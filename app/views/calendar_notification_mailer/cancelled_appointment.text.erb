<%= t ".greeting", name: @calendar.user.full_name %>

<%= t ".cancelled_appointment", appointment_type: @appointment_type.title, person: @booker_name %>

<%= t ".appointment_info" %>:

<%= t ".name" %>: <%= @booker_name %>
<%= t ".email" %>: <%= @booker_email %>
<%= t ".date" %>: <%= l @appointment.start_at, format: :short_date %>
<%= t ".time" %>: <%= l @appointment.start_at, format: :short_time %>
<%= t ".cancelled_on" %>: <%= l @appointment.deleted_at, format: :short_date %>

<%= t ".see_your_appointment", path: appointment_url(@appointment, calendar: @calendar) %>
<%= t ".closing" %>

<%= t "shared.signature" %>
