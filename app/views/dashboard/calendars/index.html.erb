<p style="color: green"><%= notice %></p>

<h1>Calendars</h1>

<% @external_calendars.each do |calendar| %>
  <% if connected_calendar = @calendars.find_by(identifier: calendar.id) %>
    <%= link_to t(".primary_calendar"), dashboard_calendar_path(id: connected_calendar), class: "btn btn-primary mb-4" %>
  <% else %>
    <%= button_to t(".connect_calendars", name: calendar.summar), google_calendars_path(id: calendar.id), class: "btn btn-outline btn-secondary mb-4" %>
  <% end %>
<% end %>
