<div class="card <%= width %> bg-base-100 shadow-xl rounded-md cursor-auto transition ease-in-out hover:scale-110 hover:bg-gradient-to-b hover:from-gray-200 hover:to-slate-100 duration-300 mb-4" data-controller="event-component" data-action="click->event-component#expand">
	<div class="card-body p-4 cursor-auto">
		<b><%= @event.title %></b>
		<%= date %>
		<%= @event.creator_name %>
		<div class="hidden text-xs my-1" data-event-component-target="detail">
			<div><%= @event.creator_email %></div>
			<div><%= @event.description.html_safe %></div>
		</div>
		<div data-event-component-target="time"><%= time_period %></div>
	</div>
</div>
